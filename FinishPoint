package engine;

import java.awt.Point;

/**
 *
 * @author i13037
 */
public class FinishPoint{

    private Point finishLocation; //lokasi target finish
    
    /**
     * Constructor kelas FinishPoint
     * @param x lokasi point
     */
    public FinishPoint(Point x){
        this.finishLocation.setLocation(x);
    }

    /**
     * Method untuk mengembalikan posisi target finishnya
     * @return lokasi target finish
     */
    public Point getFinishLocation() {
        return finishLocation;
    }

    /**
     * Method untuk memindahkan posisi target finish
     * @param finishLocation posisi target finish yang baru
     */
    public void setFinishLocation(Point finishLocation) {
        this.finishLocation = finishLocation;
    }
    
    
}
